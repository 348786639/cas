<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ding.SysUserMapper">

    <select id="findUserName" parameterType="java.util.Map" resultType="java.lang.String">
        select password from t_sys_user where user_name=#{username}
    </select>

</mapper>
